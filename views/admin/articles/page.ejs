<%- include('../../partials/header'); %>

    <body>
        <%- include('../../partials/home-navbar'); %>
            <div class="container">
                <% result.articles.rows.forEach(article=> { %>
                    <div class="card mt-3">
                        <div class="card-header">
                            <h2>
                                <%= article.title %>
                            </h2>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">Read</a>
                        </div>
                    </div>
                    <% }) %>

                        <div class="row">
                            <div class="col col-12 mt-3">
                                <% if(result.page> 2){ %>
                                    <a style="float: left;" href="/articles/page/<%= result.page - 1%>">Prev Page</a>
                                    <% } else if(result.page==2){ %>
                                        <a style="float: left;" href="/">Prev Page</a>
                                        <% } %>

                                            <% if(result.next){ %> <a style="float: right;"
                                                    href="/articles/page/<%= result.page + 1 %>">Next Page</a>
                                                <% } %>

                            </div>
                        </div>
            </div>
    </body>
    <%- include('../../partials/footer'); %>